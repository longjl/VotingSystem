<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/view_min_height"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_reportName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="#009999"
                android:textSize="26sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 测评选项 start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/view_min_height"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_titleFirst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="#009999"
                        android:textSize="26sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:id="@+id/tv_detailFirst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="#9a6700"
                        android:textSize="30sp" />

                    <com.vs.views.MyListView
                        android:id="@+id/lv_vote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
            <!-- 测评选项 end -->

            <!-- 测评选项 start -->
            <LinearLayout
                android:id="@+id/layout_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/view_min_height"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_titleSecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="#009999"
                        android:textSize="26sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:id="@+id/tv_detailSecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- 测评选项 end -->
            <!-- 投票选项 start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/view_min_height"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_titleVote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="#009999"
                        android:textSize="26sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="30dp"
                    android:paddingTop="20dp">
                    <!-- 文本 elementType = 1 -->
                    <LinearLayout
                        android:id="@+id/layout_elementtype_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/et_extraResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="意见和建议"
                            android:minHeight="60dp" />
                    </LinearLayout>

                    <!-- 单选框 elementType = 2 -->
                    <LinearLayout
                        android:id="@+id/layout_elementtype_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <RadioGroup
                            android:id="@+id/rg_vote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rb_a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A"
                                android:textColor="#9a6700"
                                android:textSize="28sp"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/rb_b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="B"
                                android:textColor="#9a6700"
                                android:textSize="28sp"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/rb_c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="C"
                                android:textColor="#9a6700"
                                android:textSize="28sp"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/rb_d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="D"
                                android:textColor="#9a6700"
                                android:textSize="28sp"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/rb_e"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="E"
                                android:textColor="#9a6700"
                                android:textSize="28sp"
                                android:visibility="gone" />
                        </RadioGroup>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <!-- 投票选项 end -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg"
                    android:gravity="center"
                    android:minHeight="50dp"
                    android:minWidth="400dip"
                    android:text="下一步"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>