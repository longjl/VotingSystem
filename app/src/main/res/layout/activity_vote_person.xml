<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/view_min_height"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_reportName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="报表名字"
                android:textColor="#009999"
                android:textSize="26sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 干部信息 start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/view_min_height"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="干部信息"
                        android:textColor="#009999"
                        android:textSize="26sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- 姓名 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="姓名："
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="龙建林"
                                android:textColor="#9a6700"
                                android:textSize="22sp" />
                        </LinearLayout>
                        <!-- 现任职务 -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:text="现任职务："
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_xianrenzhiwu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="基建设备科科长"
                                android:textColor="#9a6700"
                                android:textSize="22sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- reportType = 3 显示的属性 -->
                    <LinearLayout
                        android:id="@+id/layout_reportType_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <!-- 性别 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:text="性别："
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/tv_sex"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="男"
                                    android:textColor="#9a6700"
                                    android:textSize="22sp" />
                            </LinearLayout>
                            <!-- 出生年月 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:text="出生年月："
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/tv_birthday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2015-01"
                                    android:textColor="#9a6700"
                                    android:textSize="22sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <!-- 任职时间 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:text="任职时间："
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/tv_renzhishijian"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2015-02"
                                    android:textColor="#9a6700"
                                    android:textSize="22sp" />
                            </LinearLayout>
                            <!-- 原任职务 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:text="原任职务："
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/tv_yuanrenZhiwu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="康复科副护士长"
                                    android:textColor="#9a6700"
                                    android:textSize="22sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <!-- 干部信息 end -->


            <!-- 测评选项 start -->
            <LinearLayout
                android:id="@+id/layout_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/view_min_height"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_titleFirst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="测评要素"
                        android:textColor="#009999"
                        android:textSize="26sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:id="@+id/tv_detailFirst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="#9a6700"
                        android:textSize="30sp" />

                    <com.vs.views.MyListView
                        android:id="@+id/lv_vote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
            <!-- 测评选项 end -->

            <!-- 测评选项 start -->
            <LinearLayout
                android:id="@+id/layout_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/view_min_height"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_titleSecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="内容"
                        android:textColor="#009999"
                        android:textSize="26sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:id="@+id/tv_detailSecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- 测评选项 end -->
            <!-- 投票选项 start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_bg"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/view_min_height"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_titleVote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="投票选项"
                        android:textColor="#009999"
                        android:textSize="26sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="30dp"
                    android:paddingTop="20dp">
                    <!-- 文本 elementType = 1 -->
                    <LinearLayout
                        android:id="@+id/layout_elementtype_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/et_extraResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="意见和建议"
                            android:minHeight="60dp" />
                    </LinearLayout>

                    <!-- 单选框 elementType = 2 -->
                    <LinearLayout
                        android:id="@+id/layout_elementtype_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <RadioGroup
                            android:id="@+id/rg_vote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rb_a"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/radiobutton_bg"
                                android:text="A"
                                android:textColor="#9a6700"
                                android:textSize="22sp"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/rb_b"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/radiobutton_bg"
                                android:text="B"
                                android:textColor="#9a6700"
                                android:textSize="22sp"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/rb_c"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/radiobutton_bg"
                                android:text="C"
                                android:textColor="#9a6700"
                                android:textSize="22sp"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/rb_d"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/radiobutton_bg"
                                android:text="D"
                                android:textColor="#9a6700"
                                android:textSize="22sp"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/rb_e"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/radiobutton_bg"
                                android:text="E"
                                android:textColor="#9a6700"
                                android:textSize="22sp"
                                android:visibility="gone" />
                        </RadioGroup>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <!-- 投票选项 end -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_bg"
                    android:gravity="center"
                    android:minHeight="50dp"
                    android:minWidth="400dip"
                    android:text="下一步"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>